<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_shop_purchase_1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView_shop_refill_row_icon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_honey_comb"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="15dp"
            />

        <TextView
            android:id="@+id/textView_shop_refill_row_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로얄젤리 1,000ml"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView_shop_refill_row_icon1"
            android:layout_margin="5sp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_shop_refill_row_purchase1"
            android:layout_width="86dp"
            android:layout_height="34dp"
            android:background="@drawable/round_corner_button"
            android:text="₩1,000"
            android:textColor="@color/gold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView_shop_refill_row_line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:src="@drawable/line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_shop_purchase_1"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_shop_purchase_2"
        app:layout_constraintTop_toBottomOf="@+id/imageView_shop_refill_row_line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView_shop_refill_row_icon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_honey_comb"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="15dp"
            />

        <TextView
            android:id="@+id/textView_shop_refill_row_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로얄젤리 4,000ml"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView_shop_refill_row_icon2"
            android:layout_margin="5sp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_shop_refill_row_purchase2"
            android:layout_width="86dp"
            android:layout_height="34dp"
            android:background="@drawable/round_corner_button"
            android:text="₩3,000"
            android:textColor="@color/gold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView_shop_refill_row_line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:src="@drawable/line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_shop_purchase_2"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_shop_purchase_3"
        app:layout_constraintTop_toBottomOf="@+id/imageView_shop_refill_row_line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView_shop_refill_row_icon3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_honey_comb"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="15dp"
            />

        <TextView
            android:id="@+id/textView_shop_refill_row_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로얄젤리 15,000ml"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView_shop_refill_row_icon3"
            android:layout_margin="5sp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_shop_refill_row_purchase3"
            android:layout_width="86dp"
            android:layout_height="34dp"
            android:background="@drawable/round_corner_button"
            android:text="₩10,000"
            android:textColor="@color/gold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView_shop_refill_row_line3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:src="@drawable/line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_shop_purchase_3"
        />

    <include
        android:id="@+id/progressBar_shop_purchase"
        layout="@layout/layout_progress_bar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>