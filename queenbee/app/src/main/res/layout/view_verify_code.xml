<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.tresfellas.queenbee.ui.custom.CustomEditText
        android:id="@+id/editText_verify_code1"
        style="@style/Widget.Queenbee.CustomEditText.VerificationCode"
        android:layout_width="0dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/editText_verify_code2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tresfellas.queenbee.ui.custom.CustomEditText
        android:id="@+id/editText_verify_code2"
        style="@style/Widget.Queenbee.CustomEditText.VerificationCode"
        android:layout_width="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/editText_verify_code3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/editText_verify_code1"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tresfellas.queenbee.ui.custom.CustomEditText
        android:id="@+id/editText_verify_code3"
        style="@style/Widget.Queenbee.CustomEditText.VerificationCode"
        android:layout_width="0dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/editText_verify_code4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/editText_verify_code2"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tresfellas.queenbee.ui.custom.CustomEditText
        android:id="@+id/editText_verify_code4"
        style="@style/Widget.Queenbee.CustomEditText.VerificationCode"
        android:layout_width="0dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/editText_verify_code5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/editText_verify_code3"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tresfellas.queenbee.ui.custom.CustomEditText
        android:id="@+id/editText_verify_code5"
        style="@style/Widget.Queenbee.CustomEditText.VerificationCode"
        android:layout_width="0dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/editText_verify_code6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/editText_verify_code4"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tresfellas.queenbee.ui.custom.CustomEditText
        android:id="@+id/editText_verify_code6"
        style="@style/Widget.Queenbee.CustomEditText.VerificationCode"
        android:layout_width="0dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/editText_verify_code5"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>