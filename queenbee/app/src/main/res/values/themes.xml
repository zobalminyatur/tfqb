<!--    </style>-->

    <!--    Base-->
    <style name="Widget.Queenbee.TextView" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Widget.Queenbee.Button" parent="">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/TextAppearance.Queenbee.Button</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Widget.Queenbee.Tab" parent="">
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabTextColor">@color/gray</item>
        <item name="tabRippleColor">@null</item>
    </style>

    <!--    Fragments-->
    <style name="Widget.Queenbee.TextView.Head5">
        <item name="android:textAppearance">@style/TextAppearance.Queenbee.Headline5</item>
    </style>

    <style name="Widget.Queenbee.TextView.Head6">
        <item name="android:textAppearance">@style/TextAppearance.Queenbee.Headline6</item>
    </style>

    <style name="Widget.Queenbee.TextView.SubTitle1">
        <item name="android:textAppearance">@style/TextAppearance.Queenbee.Subtitle1</item>
    </style>

    <style name="Widget.Queenbee.TextView.SubTitle2">
        <item name="android:textAppearance">@style/TextAppearance.Queenbee.Subtitle2</item>
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="Widget.Queenbee.TextView.Body1">
        <item name="android:textAppearance">@style/TextAppearance.Queenbee.Body1</item>
    </style>

    <style name="Widget.Queenbee.TextView.Body2">
        <item name="android:textAppearance">@style/TextAppearance.Queenbee.Body2</item>
    </style>

    <style name="Widget.Queenbee.TextView.Body3">
        <item name="android:textAppearance">@style/TextAppearance.Queenbee.Body3</item>
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="Widget.Queenbee.TextView.HeadDetail">
        <item name="android:textAppearance">@style/TextAppearance.Queenbee.Body3</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Register -->
    <style name="Widget.Queenbee.TextView.LoginTitle">
        <item name="android:textAppearance">@style/TextAppearance.Queenbee.Headline5</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.Queenbee.TextView.LoginBody">
        <item name="android:textAppearance">@style/TextAppearance.Queenbee.Body1</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.Queenbee.TextView.EditTextTitle">
        <item name="android:textAppearance">@style/TextAppearance.Queenbee.Body2</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="Widget.Queenbee.EditText" parent="">
        <item name="android:background">@drawable/round_corner_20</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/TextAppearance.Queenbee.Body1</item>
        <item name="android:textColorHint">@color/gray_dark</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Widget.Queenbee.CustomEditText" parent="">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/TextAppearance.Queenbee.Body1</item>
        <item name="android:textColorHint">@color/gray_dark</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Widget.Queenbee.CustomEditText.VerificationCode">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="background">@drawable/edittext_border_background</item>
    </style>

    <style name="Widget.Queenbee.Button.Login" parent="">
        <item name="android:layout_height">44dp</item>
        <item name="android:background">@drawable/round_corner_button</item>
        <item name="android:text">@string/next</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/gold</item>
    </style>

    <style name="Widget.Queenbee.Button.shop" parent="">
        <item name="android:layout_width">86dp</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:background">@drawable/round_corner_button_5</item>
        <item name="android:text">@string/receive_free_royal_jelly</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gold_dark</item>
    </style>

