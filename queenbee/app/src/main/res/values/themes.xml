<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Queenbee" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/gold_dark</item>
        <item name="colorOnPrimary">@color/brown_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brown_dark</item>
        <item name="colorSecondaryVariant">@color/gold</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->

        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_image_layout</item>
        <item name="android:navigationBarColor">@color/brown_dark</item>
    </style>

    <style name="TabLayout_Theme" parent="@style/Theme.Queenbee">
        <item name="android:singleLine">true</item>
    </style>

    <style name="AppBarLayout_Theme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="elevation">0dp</item>
        <item name="colorPrimary">@color/white</item>
    </style>

<!--    <style name="fullscreenImageDialog" parent="Theme.AppCompat.Light.Dialog.Alert">-->
